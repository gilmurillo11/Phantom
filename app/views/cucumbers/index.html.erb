<div class="cucumbers">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <h2>Cucumber Tests</h2>
      </div>
      <div class="col-md-8">
        <% @cucumbers.in_groups_of(3).each do |cucumbers| %>
            <% cucumbers.select! {|x| !x.nil?} %>
            <div class='row'>
              <% cucumbers.each do |cucumber| %>
                  <div class='col-md-4'>
                    <div class="env">
                      <img src= <%= cucumber.env %> >
                      <div class="caption">
                        <span class="listing-title"><%= cucumber.browser %></span>
                        <span><%= link_to 'Show', cucumber %></span>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
        <% end %>

      </div>
    </div>

  </div>
</div>

<table>
  <thead>
  <tr>
    <th>Cucumber Test</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @cucumbers.each do |cucumber| %>
      <tr>
        <td><%= cucumber.browser %></td>
        <div class="env">
          <img src= <%=cucumber.env %> >
          <div>
            <td><%= link_to 'Show', cucumber %></td>
          </div>
        </div>
      </tr>
  <% end %>
  </tbody>
</table>
<br>